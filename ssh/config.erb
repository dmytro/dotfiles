# vi:noai:nosm:tw=76 ts=4 sw=4
# From  http://blogs.perl.org/users/smylers/2011/08/ssh-productivity-tips.html
StrictHostKeyChecking no
ControlMaster auto
ControlPath /tmp/ssh_mux_%h_%p_%r
<% if @controlpersist -%>    ControlPersist 6h <% end %>
ForwardAgent yes
#Ciphers arcfour256
#MACs umac-64@openssh.com

#
# Host-only net VirtualBox
#
Host 192.168.56.* polel
    User dmytro
    IdentityFile ~/.ssh/polel

Host ub nagios chef slave
    User ubuntu
    IdentityFile ~/.ssh/ubuntu

#
# Development stuff
#
Host heroku.com
IdentityFile ~/.ssh/heroku

Host github.com gist.github.com
    HostName github.com
    IdentityFile ~/.ssh/github
    User git


Host bitbucket.org
    IdentityFile ~/.ssh/github
    User git

Host viy
    HostName viy.sakae
    IdentityFile ~/.ssh/svaroh
    User dk

Host polel
    HostName polel.sakae
    IdentityFile ~/.ssh/svaroh
    User dmytro

<%= $coiney %>

<%= $irox %>

#Host 192.168.2.*
Host *
    IdentitiesOnly yes
    IdentityFile ~/.ssh/svaroh
    IdentityFile ~/.ssh/id_dsa
